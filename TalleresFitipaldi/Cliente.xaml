<Window x:Class="TalleresFitipaldi.Cliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TalleresFitipaldi"
        mc:Ignorable="d"
        Title="Clientes" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="False" Background="#FFF6F7F8" BorderBrush="#FF5486B7" Foreground="#FF150505" Grid.ColumnSpan="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IdCliente" />
                <DataGridTextColumn Header="Nombre"/>
                <DataGridTextColumn Header="Apellidos"/>
                <DataGridTextColumn Header="DNI"/>
                <DataGridTextColumn Header="Telefono"/>
                <DataGridTextColumn Header="Direccion"/>
                <DataGridTextColumn Header="Email"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
